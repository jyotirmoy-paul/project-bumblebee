<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingBottom="10dp"
    android:id="@+id/parent_layout"
    android:background="@color/lightRed"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/category_image"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="Category Image"
            android:src="@drawable/fruits_graphic_asset"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <!--detail information view-->
        <RelativeLayout
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/donorName"
                android:text="Donor Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/donorName"
                android:textColor="#000"
                android:id="@+id/donorNameDisplay"
                android:text="Jyotirmoy Paul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/donorName"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/DonorNumber"
                android:text="Donor Contact:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toRightOf="@+id/DonorNumber"
                android:layout_below="@+id/donorNameDisplay"
                android:layout_marginStart="5dp"
                android:textColor="#000"
                android:id="@+id/donorNumerDisplay"
                android:text="8820154759"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@+id/DonorNumber"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/deliveryAgentName"
                android:text="Agent Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/deliveryAgentName"
                android:layout_below="@+id/donorNumerDisplay"
                android:layout_marginStart="5dp"
                android:textColor="#000"
                android:id="@+id/deliveryAgentNameDisplay"
                android:text="Anirruddha Paul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_below="@+id/deliveryAgentName"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/deliveryAgentNumber"
                android:text="Agent Contact:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toRightOf="@+id/deliveryAgentNumber"
                android:layout_below="@+id/deliveryAgentNameDisplay"
                android:layout_marginStart="5dp"
                android:textColor="#000"
                android:id="@+id/deliveryAgentNumberDisplay"
                android:text="9679032393"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/estimated_distance"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="Estimated Distance: 111.19492 Kms"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/main_donation_photo"
        android:scaleType="fitXY"
        android:src="@drawable/fruits_graphic_asset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:id="@+id/confirmation_status"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/deepRed"
        android:textStyle="bold"
        android:text="Rejected"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/button_parent_layout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/approve_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_button"
            android:text="Approve"
            android:textColor="#fff"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/reject_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_button"
            android:text="Reject"
            android:textColor="#fff"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>