<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#e0e0e0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="paul.cipherresfeber.sarwaradmin.activities.DonationDetailViewActivity"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/cover_image"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <android.support.v4.widget.NestedScrollView
        android:scrollbars="none"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_marginBottom="10dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="280dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/donor_name"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:text="Jyotirmoy Paul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/date_time"
                    android:textColor="#707070"
                    android:textSize="13sp"
                    android:layout_marginTop="1dp"
                    android:text="10:58, 12 Dec 2018"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#A0A0A0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:textColor="#707070"
                    android:textSize="13sp"
                    android:text="Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/donation_category"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:text="Education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#A0A0A0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:textColor="#707070"
                    android:textSize="13sp"
                    android:text="Donation Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/donation_description"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:text="This is the donation description area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <View
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#A0A0A0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:textColor="#707070"
                    android:textSize="13sp"
                    android:text="Other Detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/donation_other_details"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:layout_marginTop="1dp"
                    android:text="This is the donation other detail section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#A0A0A0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:textColor="#707070"
                    android:textSize="13sp"
                    android:text="Donor Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/donor_address"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:layout_marginTop="1dp"
                    android:text="ABC house, XYZ colony, near MNO road, JKL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#A0A0A0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:textColor="#707070"
                    android:textSize="13sp"
                    android:text="Donor Contact Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/donor_contact_number"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:layout_marginTop="1dp"
                    android:text="8820154759"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>