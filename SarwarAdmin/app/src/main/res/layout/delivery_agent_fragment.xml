<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <TextView
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="Sarwar Delivery Agents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@drawable/ic_new_delivery_agent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:gravity="center"
        android:background="@drawable/delivery_task_bg"
        android:orientation="vertical"
        android:id="@+id/pre_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <TextView
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Delivery Agents in SARWAR Family will show up here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="#606060"
            android:gravity="center"
            android:text="Tips: Verify delivery agents, or else they won't be available to collect donations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </LinearLayout>

    <ListView
        android:visibility="gone"
        android:id="@+id/list_view"
        android:divider="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>