<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textSize="13sp"
            android:text="Contact Number:"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/contact_number"
            android:inputType="phone"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="17dp"
            android:hint="Your Latest Contact Number"
            android:textColorHint="#808080"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textSize="13sp"
            android:text="Items(s) Description:"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/donation_description"
            android:gravity="start"
            android:minLines="3"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="17dp"
            android:hint="Briefly describe all the items you want to donate"
            android:textColorHint="#808080"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textSize="13sp"
            android:text="Approximate Value (in Rs):"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/donation_worth"
            android:inputType="number"
            android:gravity="start"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="17dp"
            android:hint="Provide a reasonable amount"
            android:textColorHint="#808080"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textSize="13sp"
            android:text="Any other detail:"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/other_detail"
            android:minLines="3"
            android:gravity="start"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="17dp"
            android:hint="Write about quality and quantity of donation"
            android:textColorHint="#808080"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/upload_a_photo"
                android:layout_marginBottom="10dp"
                android:src="@drawable/add_photo"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:textSize="16sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Upload a Main Photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textColor="#000"
                android:text="This photo will be shown to the Authority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <Button
            android:id="@+id/send_donation_details"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_button"
            android:layout_marginTop="20dp"
            android:text="Get location and post"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="45dp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>