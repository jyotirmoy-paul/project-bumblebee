<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:visibility="gone"
        android:id="@+id/listView"
        android:dividerHeight="5dp"
        android:divider="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/pre_loading"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/delivery_task_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <TextView
            android:layout_marginBottom="10sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="22sp"
            android:gravity="center"
            android:text="Your donation collection tasks will be shown here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#606060"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Meanwhile, keep your internet connection and GPS active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#606060"
            android:textSize="15sp"
            android:gravity="center"
            android:text="If you wish to receive donation requests, you have to mark yourself as 'Available'"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>


    </LinearLayout>

</LinearLayout>