<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#e6e6ff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/profile_pic"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:text="J"
                    android:background="@drawable/profile_identity_background"
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"  />


                <LinearLayout
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/donor_name"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="17sp"
                        android:text="Jyotirmoy Paul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/donation_time_stamp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="15:12, 12 Dec 2018"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/donation_category"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textStyle="bold"
                android:gravity="start"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="Category: Food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/donation_description"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="This is the donation item description section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/donation_cover_image"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <Button
                    android:focusable="false"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_call"
                    android:id="@+id/call_btn"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="call"
                    android:background="@drawable/custom_button"
                    android:layout_width="100dp"
                    android:layout_height="40dp" />

                <Button
                    android:focusable="false"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_location"
                    android:layout_marginStart="20dp"
                    android:id="@+id/get_direction_btn"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:text="get direction"
                    android:background="@drawable/custom_button"
                    android:layout_width="170dp"
                    android:layout_height="40dp" />

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:gravity="center"
                android:text="Tap to view more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>