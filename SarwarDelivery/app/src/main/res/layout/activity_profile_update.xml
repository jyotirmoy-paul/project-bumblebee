<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:fillViewport="true"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:visibility="gone"
                android:id="@+id/complete_profile_popup"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Please complete your profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="60dp"
            android:gravity="center"
            android:text="J"
            android:background="@drawable/profile_identity_background"
            android:id="@+id/profile_pic"
            android:layout_gravity="center"
            android:translationY="-50dp"
            android:layout_width="100dp"
            android:layout_height="100dp"  />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <TextView
            android:textSize="15sp"
            android:textColor="#D3D3D3"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="-"
            android:textColorHint="#fff"
            android:backgroundTint="@color/colorAccent"
            android:textStyle="bold"
            android:id="@+id/user_name"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <TextView
            android:textSize="15sp"
            android:textColor="#D3D3D3"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="Mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="-"
            android:textColorHint="#fff"
            android:backgroundTint="@color/colorAccent"
            android:textStyle="bold"
            android:id="@+id/user_mobile_number"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <TextView
            android:textSize="15sp"
            android:textColor="#D3D3D3"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="Aadhar Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/aadhar_card_view"
            android:visibility="gone"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <!--Aadhar card require view-->
        <LinearLayout
            android:id="@+id/aadhar_card_req_view"
            android:background="#26ffffff"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:src="@drawable/ic_aadhar_card"
                android:scaleType="fitXY"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:textSize="15sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Upload Your Aadhar Card Photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#fff"
                android:text="For authentication purpose please provide your aadhar card details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_marginTop="10dp"
            android:id="@+id/save_profile_details"
            android:src="@drawable/ic_save"
            android:layout_marginEnd="30dp"
            android:layout_gravity="end"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>